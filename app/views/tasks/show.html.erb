<h1><%= @task.title%></h1>
<i class="far fa-edit"></i> <%= link_to "Edit this task", edit_task_path %>


<p class="task-des"><%= @task.details%></p>
  <p class="task-status">
  <% if @task.completed %>
        <i class="fas fa-check"></i> This task is completed
    <% else %>
        <i class="far fa-square"></i> This task is not completed yet
    <% end %>
  </p>


<%= link_to "Back to list", tasks_path %>
